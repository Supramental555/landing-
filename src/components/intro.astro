---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
---

<ContentSection title="Consultanta in mediul rural" id="intro">
  <Icon slot="eyebrow" name="logomark" class="h-32" />
  <Fragment slot="lead">
    
    <span class="text-primary">Descopera potentialul si oportunitatile din zona ta</span>
    <span class="text-primary"></span>
   <span class="text-primary"></span>
  </Fragment>
  <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
    <a
      href="https://rural-edu.ro/"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="telescope" class="h-8" />
      <span>Vezi mai mult</span>
    </a>
    <a
      href="https://rural-edu.ro/"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon pack="mdi" name="rocket" class="h-8" />
      <span>Contact</span>
    </a>
  </div>
</ContentSection>
