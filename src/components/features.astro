---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Bring Your Own Framework",
    description:
      "Acest site oferă informații despre cum să își promoveze afacerea, cum să obțină finanțare și cum să se conecteze cu potențiali clienți și parteneri.",
    icon: "mdi:handshake",
  },
  {
    title: "100% Static HTML, No JS",
    description:
      "Rural Business Hub oferă acces la resurse precum ghiduri de marketing.",
    icon: "mdi:feather",
  },
  {
    title: "On-Demand Components",
    description:
      "Rural Business Hub este un loc unde afacerile din zonele rurale pot găsi suport și oportunități pentru a-și dezvolta afacerea și a atrage noi clienți..",
    icon: "mdi:directions-fork",
  },
  {
    title: "Modele de planuri de afaceri",
    description:
      "site-ul oferă o platformă unde afacerile din zonele rurale pot fi promovate prin intermediul profilurilor de afacer",
    icon: "mdi:graph",
  },
  {
    title: " Strategii SEO ",
    description:
      "informații despre programe de finanțare și posibilități de networking.",
    icon: "mdi:search-web",
  },
  {
    title: "Comunicare corecta pe retelele sociale",
    description:
      " Rural Business Hub oferă acces la informații despre evenimente și oportunități de afaceri din zona rurală, precum și la resurse educaționale, cum ar fi seminarii și cursuri online.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="Rural Business Hub" id="features">
  <Fragment slot="lead">
   Punctul de intalnire  <span class="text-primary">pentru locuitorii din zonele rurale</span>. care pot obține informații despre servicii
    <span class="text-primary">state-of-the-art</span>
    și programe disponibile pentru a-și sprijini afacerea. <span class="text-primary">innovations</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
